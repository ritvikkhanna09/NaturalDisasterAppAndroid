<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="ritvikkhanna.naturaldisasterapp.Details">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#4099FF"
            android:id="@+id/Rtop">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="TheHelpingHand"
                android:textColor="#FFFFFF"
                android:textSize="40dp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/Rmid1"
            android:layout_below="@+id/Rtop">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Relief"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_above="@+id/button1"
                 />
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Get Relief"
                android:background="@drawable/buttonshape"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/button1" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/Rmid2"
            android:layout_below="@+id/Rmid1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Casualty Details"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_above="@+id/button2" />
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Enter Details"
                android:background="@drawable/buttonshape"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/button2" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/Rmid3"
            android:layout_below="@+id/Rmid2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Info"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_above="@+id/button3"
                 />
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Current Info"
                android:background="@drawable/buttonshape"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/button3" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/blinker"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#4099FF"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="#FF0000"
                android:id="@+id/textblinker"
                android:text="24/7 HELPLINE : 88888888"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>

    <Button
        android:id="@+id/about"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Us"

        android:layout_above="@+id/blinker"
        android:layout_centerHorizontal="true" />

</RelativeLayout>