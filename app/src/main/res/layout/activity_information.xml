<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="ritvikkhanna.naturaldisasterapp.Information">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#4099FF"
        android:id="@+id/Rtop">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TheHelpingHand"
            android:textStyle="bold"
            android:textSize="40dp"
            android:textColor="#FFFFFF"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/Rmid1"
        android:layout_below="@+id/Rtop">
        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Calamity"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_above="@+id/button1"
            android:layout_alignParentStart="true" />
        <TextView
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text=""
            android:layout_below="@+id/txt1"
            android:id="@+id/edt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/Rmid2"
        android:layout_below="@+id/Rmid1">
        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Worst Hit Area"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_above="@+id/button2"
            android:layout_alignParentStart="true" />
        <TextView
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text=""
            android:layout_below="@+id/txt2"
            android:id="@+id/edt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/Rmid3"
        android:layout_below="@+id/Rmid2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Casualties"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20dp"
            android:id="@+id/txt3"
            android:layout_above="@+id/button3"
            android:layout_alignParentStart="true" />
        <TextView
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text=""
            android:layout_below="@+id/txt3"
            android:id="@+id/edt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/blinker"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#4099FF"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textColor="#FF0000"
            android:id="@+id/textblinker"
            android:text="24/7 HELPLINE : 88888888"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>

